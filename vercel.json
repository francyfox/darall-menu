{
  "version": 2,
  "installCommand": "pnpm i",
  "buildCommand": "npx prisma generate && pnpm run build",
  "builds": [
    {
      "src": "./dist/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api",
      "dest": "public/index.html"
    },
    {
      "src": "/(.+)",
      "dest": "public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist"
    }
  ]
}